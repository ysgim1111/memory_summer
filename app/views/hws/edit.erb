<%= render partial: "hws_header" %>      
<%x=Hw.find(params[:id])%>
<script>    
$(document).ready(function() {
  $('#summernote').summernote();
});
</script>
        <div class="col-md-9" >  
            <form class="form-horizontal" action="/hws/update/<%=x.id%>" method="POST" enctype="multipart/form-data">
                <h2 style="margin-top:0px;margin-bottom:15px">글쓰기</h2>
                <hr style="margin-bottom:15px">
                             
                
                <div class="form-group">
                    <p class="col-md-2 control-label">제목</p>
                    <div class="col-md-10">
                        <input type="text" name="title" value='<%=x.title%>' class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <p class="col-md-2 control-label">내용</p>
                    <div class="col-md-10">
                        <textarea id="summernote" class="form-control" rows="4" name="content" value='<%=x.content%>'></textarea>
                    </div>
                </div>
                
                <div class="form-group">
                    
                    <p class="col-md-2 control-label">비밀글</p>
                    <div class="col-md-10">
                        <input type='checkbox' name='secret' value='on'>
                        <p> *운영자와 본인만 볼 수 있습니다</p>
                    </div>                    
                </div>  
                <input type='hidden' value='post' name='choice'>
            <div class="col-md-12" style="text-align:right; margin-top:20px;padding-right:0px">
           <button class="btn">글 쓰기</button>
          </div>    
                
        </form>
            
        </div><!--/.col-md-10-->


<%= render partial: "hws_footer" %>      