<style>
  .pass_submit {
    width:100%;
    margin-top:30px;
  }
</style>




<!-- ========== Page Title ========== -->

        <header style="background:url(<%= image_url('log.jpg') %>);background-size:cover;background-position:0% 50%" class="page-title pt-large pt-dark pt-plax-lg-dark">
            <div class="container">
              <div class="row">

                <div class="col-md-12" style="text-align:center">
                    <h1 class="title" style="font-family:'Nanum Myeongjo'">비밀번호 변경</h1>
                  <span class="subheading">건전한 사이버 문화를 지향합니다</span>
                </div>
                
              </div>

            </div>
        </header>
        
        <!-- ========== Sign_up Form ========== -->

        <div class="login-2" style="background:#e8e8e8;">
          <div class="bg-overlay">
            
            <div class="container">
              <div class="row ws-m">
                <div class="col-md-offset-3 col-md-6">

                  <div class="form-wrapper">
                    <div class="form-content" style="margin-top: 60px;padding-left:30px;padding-right:30px">
                      <hr style="margin-bottom: 15px;">
                      <h3 class="form-header" style="margin-bottom:0px">비밀번호 변경</h3>
                      <hr style="margin-bottom: 15px;margin-top:15px">
                      
                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "새 비밀번호" %>
    <% if @minimum_password_length %>
      <small style="color:gray">(<%= @minimum_password_length %> 자 이상으로 적어주세요)</small>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off" , placeholder: "비밀번호를 입력하세요", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "비밀번호 확인" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", onkeyup: "checkPass(); return false;",class: "form-control" %>
    <span id="confirmMessage" class="confirmMessage"></span>
  </div>

    <%= f.submit "비밀번호 변경", :class => 'pass_submit btn' %>
    
<% end %>
                     
                      <!--
                    <span class="cards-header">또는</span> -->
                    </div><!-- / .form-content -->
                  <%#
                    <!-- Social Signup -->
                   <div class="social-signup">
                      <a style="width:100%" href="/users/auth/facebook" class="social-card fb-card">
                        <span class="sc-lead">Facebook</span>
                        <span class="sc-info">페이스북으로 가입하기</span>
                        <i class="fa fa-facebook"></i>
                      </a>
                    </div><!-- / .social-signup --> %>
                  </div><!-- / .form-wrapper -->

                  
                  <!--<a href="#" class="email-signup pull-right">Signup with email</a>-->


                </div><!-- / .col-md-6 -->
              </div><!-- / .row -->
            </div><!-- / .container -->

          </div><!-- / .bg-overlay -->
        </div><!-- / .bg-login -->
        
<script>

       function checkPass()
{
    //Store the password field objects into variables ...
    var user_password = document.getElementById('user_password');
    var user_password_confirmation = document.getElementById('user_password_confirmation');
    //Store the Confimation Message Object ...
    var message = document.getElementById('confirmMessage');
    //Set the colors we will be using ...
    var goodColor = "#66cc66";
    var badColor = "#ff6666";
    //Compare the values in the password field 
    //and the confirmation field
    if(user_password.value == user_password_confirmation.value){
        //The passwords match. 
        //Set the color to the good color and inform
        //the user that they have entered the correct password 
        user_password_confirmation.style.backgroundColor = goodColor;
        message.style.color = goodColor;
        message.innerHTML = "비밀번호가 일치합니다!"
    }else{
        //The passwords do not match.
        //Set the color to the bad color and
        //notify the user.
        user_password_confirmation.style.backgroundColor = badColor;
        message.style.color = badColor;
        message.innerHTML = "비밀번호가 일치하지 않습니다!"
        
    }
}  

</script>



