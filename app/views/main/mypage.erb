 </header>
<!-- -->
<div style="background: #e8e8e8;">
<div style="padding-top:60px" id="blog" class="section container blog-classic">
    <div class="row blog-classic" >
        <!-- ========== Sidebar col-md-3 ========== -->

            <%= render "main/sidebar" %>
        
          <!-- ========== Blog Posts ========== -->
          <div id="pfolio" class="col-md-9">
             
              
                   <!-- 게시글-->
                   
                   
              <div class="col-lg-12 portfolio-item" style="width: 100%;">
                <div class="blog-post" style="background:#fff;margin-bottom:30px;border-left:none">
                  <div class="bp-content" style="padding: 30px 45px 30px 45px">
                  
                    <div class="row">
                      <div class="col-md-12" style="padding-top:20px">
                          <h2 style="margin-top:0px;margin-bottom:10px;display:inline-block"><i class="fa fa-bar-chart fa-large"></i>
                          통계
                          </h2>
                        
                        <hr style="margin-top:10px;margin-bottom:10px">
                    <%db=Sueform.where(:user_id => current_user.id)%>                    
                    <h4 class="qna_text">신고횟수 : <%=db.count%>회 </h4>
                    <h4 class="qna_text">고소미작성 횟수 : <%=db.count%>회 </h4>
                    <h4 class="qna_text">클린지수 : 123 </h4>
                        
                      </div>
                    </div>
                  </div>
                </div><!-- / .bp-content -->
                
                
                <script>
                  $('.msg_text').hide();
                  $('#show_text').on('click',function(){
                    if($('.msg_text').css('display') === 'none'){
                    $(this).text('닫기');
                    $('.msg_text').show();
                    }
                    else{
                    $(this).text('내용보기');
                    $('.msg_text').hide();  
                    }
                  })
                </script>
                
              
              </div><!-- / .content-first -->
              
              
              <div class="col-lg-12 portfolio-item content_1st" style="width: 100%;">
                <div class="blog-post" style="background:#fff;margin-bottom:30px;border-left:none">
                  <div class="bp-content" style="padding: 30px 45px 30px 45px">
                    <div class="row">
                      <div class="col-md-12" style="padding-top:20px">
                          <h2 style="margin-top:0px;margin-bottom:10px;display:inline-block"><i class="fa fa-balance-scale fa-large"></i>
                          제보한 사건<br class="mb_line_break">
                          <small>현재 <%=@r.count%>건을 제보하였습니다.</small></h2>
                        <hr style="margin-top:10px;margin-bottom:10px">
                        <div class="col-md-12" style="border-left:3px solid #BB6D32;;margin-left:15px;text-align:left;margin-bottom:15px">
                            <% if @r.present? %>
                              <% @r.each do |x| %>
                          
                            <h3 style="margin-top:10px;"><%=x.you_nickname%> <small><span class="fa fa-tag"></span><%=x.location %></small></h3>
                            <p style="margin-bottom:0px"><%= time_ago_in_words(x.created_at) %> 전에 작성됨 <span class="specific fa fa-chevron-circle-down"></span></p>
                            <p class="warm_word" style="padding-left:15px;margin-bottom:0px"><span class="fa fa-smile-o"></span>제보이유 - 
                            <%=x.reason %></p>
                            <p class="warm_word" style="padding-left:15px;margin-bottom:0px"><span class="fa fa-heartbeat"></span>따뜻한 한마디 - 
                            <%=x.content %></p>
                              <% end %>
                            <% end %>
                        </div> 
                      </div>
                    </div>
                  </div><!-- / .bp-content -->
                </div>
                <script>
                    $(window).load(function(){
                      $('.warm_word').hide();
                      $('.specific').css('cursor','pointer');
                      $('.specific').on('click',function(){
                        if ( $(this).hasClass('fa-chevron-circle-down') ){
                          $('.warm_word').show(400);
                          $(this).removeClass('fa-chevron-circle-down').addClass('fa-chevron-circle-up')
                        }
                        else {
                          $('.warm_word').hide(400);
                          $(this).removeClass('fa-chevron-circle-up').addClass('fa-chevron-circle-down')
                        }
                      })
                    })
                  </script>
                
                <script>
                  $('.msg_text').hide();
                  $('#show_text').on('click',function(){
                    if($('.msg_text').css('display') === 'none'){
                    $(this).text('닫기');
                    $('.msg_text').show();
                    }
                    else{
                    $(this).text('내용보기');
                    $('.msg_text').hide();  
                    }
                  })
                </script>
                
              
              </div><!-- / .content-first -->
              
              
              <div class="col-lg-12 portfolio-item content_2nd" style="width: 100%;">
                <div class="blog-post" style="background:#fff;margin-bottom:30px;border-left:none">
                  <div class="bp-content" style="padding: 30px 45px 30px 45px">
                  
                    <div class="row">
                      <div class="col-md-12" style="padding-top:20px">
                          <h2 style="margin-top:0px;margin-bottom:10px;display:inline-block"><i class="fa fa-balance-scale fa-large"></i>
                          진행중인 사건 <br class="mb_line_break">
                          <small>현재 <%=@s.count%>개의 고소장을 작성하였습니다.</small>
                          </h2>
                        
                        <hr style="margin-top:10px;margin-bottom:10px">
                        
                        <%if @s.present? %>
                        <!--만약 you_id가 비었다면 나타나지 않게. -->
                          <%@s.each do |s| %>  
                          <div style="margin-top: 0px;">
                          <h2 style="text-align:center;padding-top: 20px;margin-top: 0px;"><i class="fa fa-legal"></i><strong> <%=s.law_kind %></strong></h2>
                          
                          <p class="mb_align_center"><i class="fa fa-user-secret"></i> 피고소인 : <%=s.you_id%></p>
                          
                          <p class="mb_align_center"><i class="fa fa-flag"></i> 발생장소 : <%=s.location %></p> 
                          <a class="btn" style="width:100%" href="/sue/show/<%=s.id%>">소장 다시보기</a>
                          </div>
                          <hr style="margin-top:50px;margin-bottom:50px">
                          <% end %>
                          
                        <% else %>
                        <h4 class="qna_text">현재 진행중인 문서가 없습니다 </h4>
                        <% end %>  
                      </div>
                    </div>
                  </div>
                </div><!-- / .bp-post -->

              </div><!-- / .blog-content -->
              
              </div><!-- pfolio .col-md-9 -->
            </div><!-- /row -->
          </div><!-- .section container -->
        </div>

