<script>
  $('.content_1st').show();
  $('.content_2nd').hide();

  $('.num_1').on('click',function(event){
    $('.content_2nd').hide();
    $('.content_1st').show();
  })
  $('.num_2').on('click',function(event){
    $('.content_1st').hide();
    $('.content_2nd').show();
  })
</script>